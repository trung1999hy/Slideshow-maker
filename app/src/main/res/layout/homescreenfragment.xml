<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rim_image"
        android:scaleType="centerCrop"
        android:src="@drawable/background_home_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_setting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="Photo"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginStart="23dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_photo"
        android:text="Video Maker "
        android:textSize="@dimen/slideshow_28dp"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"

        />
    <ImageView
        android:layout_width="157dp"
        android:layout_height="147dp"
        app:layout_constraintTop_toBottomOf="@+id/img_sto"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/slideshow_25dp"
        android:background="@drawable/background_baner"

        />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="@dimen/slideshow_24dp"
        android:layout_height="@dimen/slideshow_24dp"
        android:layout_marginStart="@dimen/slideshow_20dp"
        android:layout_marginTop="@dimen/slideshow_56dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/img_sto"
        android:layout_width="@dimen/slideshow_24dp"
        android:layout_height="@dimen/slideshow_24dp"
        android:layout_marginEnd="@dimen/slideshow_20dp"
        android:src="@drawable/ic_store"
        app:layout_constraintBottom_toBottomOf="@id/img_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_setting"

        />

    <LinearLayout
        android:id="@+id/ln_create"
        android:layout_width="@dimen/slideshow_165dp"
        android:layout_height="@dimen/slideshow_60dp"
        android:layout_marginStart="@dimen/slideshow_25dp"
        android:layout_marginTop="@dimen/slideshow_125dp"
        android:background="@drawable/custom_ln_home"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_setting">

        <ImageView
            android:layout_width="@dimen/slideshow_24dp"
            android:layout_height="@dimen/slideshow_24dp"
            android:layout_marginStart="@dimen/slideshow_16dp"
            android:layout_marginTop="@dimen/slideshow_18dp"
            android:layout_marginBottom="@dimen/slideshow_18dp"
            android:background="@drawable/ic_create"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/slideshow_18dp"
                android:layout_marginTop="@dimen/slideshow_16dp"
                android:text="@string/tv_create_home"
                android:textColor="@color/color_home"
                android:textSize="@dimen/slideshow_10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/slideshow_18dp"
                android:text="@string/tv_create_home_photo"
                android:textColor="@color/color_home"
                android:textSize="@dimen/slideshow_15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_home_option"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_marginStart="@dimen/slideshow_20dp"
        android:layout_marginTop="@dimen/slideshow_25dp"
        android:layout_marginEnd="@dimen/slideshow_20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/custom_rim_homescreen"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ln_create">

        <LinearLayout
            android:id="@+id/ln_my_project1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/slideshow_39dp"
            android:layout_marginTop="@dimen/slideshow_12dp"
            android:layout_marginBottom="@dimen/slideshow_12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/slideshow_24dp"
                android:layout_height="@dimen/slideshow_24dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/slideshow_13dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/ic_my_projects" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/slideshow_16dp"
                android:text="@string/tv_my_projects"
                android:textSize="@dimen/slideshow_14dp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/slideshow_39dp"
            android:layout_marginTop="@dimen/slideshow_12dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/slideshow_12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/slideshow_24dp"
                android:layout_height="@dimen/slideshow_24dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/slideshow_13dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/ic_my_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/slideshow_16dp"
                android:text="@string/tv_my_videos"
                android:textSize="@dimen/slideshow_14dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/slideshow_39dp"
            android:layout_marginTop="@dimen/slideshow_12dp"
            android:layout_marginEnd="@dimen/slideshow_52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/slideshow_12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/slideshow_24dp"
                android:layout_height="@dimen/slideshow_24dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/slideshow_13dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/ic_my_audio" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_my_audio"
                android:gravity="center_horizontal"
                android:textSize="@dimen/slideshow_14dp"

                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ln_home_option"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/tv_total"
        android:textSize="@dimen/slideshow_18dp"
        android:layout_marginTop="@dimen/slideshow_18dp"
        android:textColor="@color/color_homeScreen_total"
        android:layout_marginStart="@dimen/slideshow_20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_total"
        app:layout_constraintBottom_toBottomOf="@id/tv_total"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/tv_my_all_projects"
        android:textSize="@dimen/slideshow_12dp"
        android:layout_marginEnd="@dimen/slideshow_20dp"
        android:textColor="@color/color_splash"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/slideshow_19dp"
        app:layout_constraintTop_toBottomOf="@id/tv_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/slideshow_20dp"
        android:layout_marginStart="@dimen/slideshow_20dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_home_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/slideshow_98dp"
        android:gravity="center"
        android:text="@string/tv_home_item"
        android:textSize="@dimen/slideshow_14dp"
        android:textColor="@color/color_homeScreen_total"
        android:layout_marginStart="@dimen/slideshow_27dp"
        android:layout_marginEnd="@dimen/slideshow_26dp"
        />
    <TextView
        android:id="@+id/tv_home_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/tv_home_item_2"
        android:textSize="@dimen/slideshow_14dp"
        android:textColor="@color/color_homeScreen_total"
        android:layout_marginStart="@dimen/slideshow_27dp"
        android:layout_marginEnd="@dimen/slideshow_26dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>