<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/slideshow_24dp"
        android:layout_height="@dimen/slideshow_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/return_left"
        android:layout_marginTop="@dimen/slideshow_15dp"
        android:layout_marginStart="@dimen/slideshow_20dp"
        />
    <ImageView
        android:layout_width="@dimen/slideshow_24dp"
        android:layout_height="@dimen/slideshow_24dp"
        app:layout_constraintTop_toTopOf="@id/img_back"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/slideshow_20dp"
        android:background="@drawable/custom_setting_my_project"
        />
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_my_projects"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/slideshow_21dp"
        android:layout_marginTop="@dimen/slideshow_11dp"
        android:textSize="@dimen/slideshow_24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_item_my_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_total"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/tv_my_project"
        android:layout_marginStart="@dimen/slideshow_21dp"
        android:textSize="@dimen/slideshow_12dp"
        android:textColor="@color/color_homeScreen_total"
        />
    <View
        android:id="@+id/view_qc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_76dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_my_project"
        android:layout_marginTop="@dimen/slideshow_11dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_24dp"
        app:layout_constraintTop_toBottomOf="@+id/view_qc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_background_total"
        >
        <TextView
            android:id="@+id/tv_int_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_total_project"
            android:layout_marginStart="@dimen/slideshow_21dp"
            android:textSize="@dimen/slideshow_14dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_number_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_int_project"
            app:layout_constraintBottom_toBottomOf="@id/tv_int_project"
            app:layout_constraintStart_toEndOf="@id/tv_int_project"
            android:text="0"
            android:layout_marginStart="@dimen/slideshow_3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/slideshow_14dp"

            />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_number_project"
            app:layout_constraintBottom_toBottomOf="@id/tv_number_project"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/slideshow_20dp"
            android:text="Cancel"
            android:textSize="@dimen/slideshow_14dp"
            android:textColor="@color/black"
            android:visibility="gone"

            />
        <ImageView
            android:id="@+id/img_manager_project"
            android:layout_width="@dimen/slideshow_14dp"
            android:layout_height="@dimen/slideshow_14dp"
            app:layout_constraintTop_toTopOf="@id/tv_number_project"
            app:layout_constraintBottom_toBottomOf="@id/tv_number_project"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_manager_project"
            android:layout_marginEnd="@dimen/slideshow_20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_number_project"
            app:layout_constraintBottom_toBottomOf="@id/tv_number_project"
            app:layout_constraintEnd_toStartOf="@id/img_manager_project"
            android:text="Manage"
            android:textSize="@dimen/slideshow_14dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/slideshow_18dp"
        android:layout_marginEnd="@dimen/slideshow_20dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_my_project_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/slideshow_233dp"
        android:gravity="center"
        android:text="@string/tv_home_item"
        android:textSize="@dimen/slideshow_14dp"
        android:textColor="@color/color_homeScreen_total"
        android:layout_marginStart="@dimen/slideshow_27dp"
        android:layout_marginEnd="@dimen/slideshow_26dp"
        />
    <TextView
        android:id="@+id/tv_my_project_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_project_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/tv_home_item_2"
        android:textSize="@dimen/slideshow_14dp"
        android:textColor="@color/color_homeScreen_total"
        android:layout_marginStart="@dimen/slideshow_27dp"
        android:layout_marginEnd="@dimen/slideshow_26dp"

        />
    
</androidx.constraintlayout.widget.ConstraintLayout>