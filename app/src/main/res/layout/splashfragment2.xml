<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/img_left"
        android:layout_width="@dimen/slideshow_24dp"
        android:layout_height="@dimen/slideshow_24dp"
        android:background="@drawable/return_left"
        android:layout_marginStart="@dimen/slideshow_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/slideshow_15dp"
        />
    <ImageView
        android:id="@+id/img_splash2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/imgsplash2"
        app:layout_constraintTop_toBottomOf="@+id/img_left"
        android:layout_marginTop="@dimen/slideshow_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/slideshow_36dp"
        android:layout_marginEnd="@dimen/slideshow_31dp"
        />
    <TextView
        android:id="@+id/tv_splash2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/slideshow_33dp"
        android:text="@string/textview_splash_2"
        app:layout_constraintTop_toBottomOf="@+id/img_splash2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/slideshow_28dp"
        android:textStyle="bold"
        android:textColor="@color/color_splash2"
        />
    <TextView
        android:id="@+id/textview_splash2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/slideshow_40dp"
        android:text="@string/tvt_total_splash"
        android:textColor="@color/color_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/slideshow_34dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash2"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_splash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_70dp"
        android:layout_marginTop="@dimen/slideshow_10dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_splash2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <LinearLayout
        android:id="@+id/ln_splash0ne"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_60dp"
        app:layout_constraintTop_toBottomOf="@id/rv_splash"
        android:layout_marginEnd="@dimen/slideshow_42dp"
        android:layout_marginStart="@dimen/slideshow_42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/slideshow_15dp"
        android:background="@drawable/custom_rim"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/slideshow_34dp"
            android:layout_height="@dimen/slideshow_34dp"
            android:src="@drawable/img_iconsplash"
            android:layout_marginTop="@dimen/slideshow_15dp"
            android:layout_marginBottom="@dimen/slideshow_13dp"
            android:layout_marginStart="@dimen/slideshow_14dp"
            android:layout_marginEnd="@dimen/slideshow_15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview_splash_3"
                android:textSize="@dimen/slideshow_14dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/slideshow_14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/slideshow_3dp"
                android:text="@string/textview_splash_4"
                android:layout_marginBottom="@dimen/slideshow_15dp"
                android:textSize="@dimen/slideshow_10dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_splash_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_60dp"
        app:layout_constraintTop_toBottomOf="@id/ln_splash0ne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/slideshow_42dp"
        android:layout_marginStart="@dimen/slideshow_42dp"
        android:layout_marginTop="@dimen/slideshow_15dp"
        android:background="@drawable/custom_rim"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/slideshow_34dp"
            android:layout_height="@dimen/slideshow_34dp"
            android:src="@drawable/splash_2"
            android:layout_marginTop="@dimen/slideshow_14dp"
            android:layout_marginBottom="@dimen/slideshow_13dp"
            android:layout_marginStart="@dimen/slideshow_14dp"
            android:layout_marginEnd="@dimen/slideshow_15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview_splash_Year"
                android:textSize="@dimen/slideshow_14dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/slideshow_14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/slideshow_3dp"
                android:text="@string/textview_splash_price"
                android:layout_marginBottom="@dimen/slideshow_15dp"
                android:textSize="@dimen/slideshow_10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_splash_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_60dp"
        android:layout_marginTop="@dimen/slideshow_15dp"
        android:background="@drawable/custom_rim"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/slideshow_42dp"
        android:layout_marginStart="@dimen/slideshow_42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ln_splash_2">

        <ImageView
            android:layout_width="@dimen/slideshow_34dp"
            android:layout_height="@dimen/slideshow_34dp"
            android:layout_marginStart="@dimen/slideshow_14dp"
            android:layout_marginTop="@dimen/slideshow_14dp"
            android:layout_marginEnd="@dimen/slideshow_15dp"
            android:layout_marginBottom="@dimen/slideshow_13dp"
            android:src="@drawable/splash_icon_3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/slideshow_14dp"
                android:text="@string/textview_splash_Lifetime"
                android:textColor="@color/black"
                android:textSize="@dimen/slideshow_14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/slideshow_3dp"
                android:layout_marginBottom="@dimen/slideshow_15dp"
                android:text="@string/textview_splash_Price_Lifetime"
                android:textSize="@dimen/slideshow_10dp" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/slideshow_41dp"
        android:paddingEnd="@dimen/slideshow_5dp"
        app:layout_constraintTop_toBottomOf="@+id/ln_splash_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_button_splash"
        android:layout_marginEnd="@dimen/slideshow_41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="@dimen/slideshow_15dp"
        android:text="@string/textview_splash_Button"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/slideshow_14dp"
        android:textColor="@color/white"
        app:drawableEndCompat="@drawable/custom_icon_right" />

</androidx.constraintlayout.widget.ConstraintLayout>